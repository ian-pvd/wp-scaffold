{
  "name": "pvd-roundhouse",
  "version": "1.0.0",
  "description": "A Multimedia WordPress Starter",
  "homepage": "https://github.com/ian-pvd/roundhouse",
  "repository": {
    "type": "git",
    "url": "https://github.com/ian-pvd/wp-scaffold"
  },
  "workspaces": [
    "themes/*",
    "mu-plugins/pvd-plugin"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "npm run build --workspaces --if-present",
    "start": "npm run watch",
    "watch:theme": "npm run watch -w=pvd-theme",
    "watch:plugin": "npm run watch -w=pvd-plugin",
    "watch": "run-p watch:theme watch:plugin",
    "test": "npm run test --workspaces --if-present",
    "clean-dist": "npm run clean-dist --if-present"
  },
  "author": {
    "name": "ian-pvd",
    "email": "pvdindustrial@gmail.com",
    "url": "https://github.com/ian-pvd",
    "role": "developer"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "devDependencies": {
    "@wordpress/create-block": "^4.25.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "2.6.2"
  }
}
