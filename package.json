{
  "name": "pvdind-roundhouse",
  "version": "0.1.0",
  "description": "A WordPress multimedia site starter.",
  "homepage": "https://github.com/ian-pvd/wp-scaffold/",
  "repository": {
    "type": "git",
    "url": "https://github.com/ian-pvd/wp-scaffold/"
  },
  "workspaces": [
    "themes/*",
    "mu-plugins/roundhouse-plugin"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "npm run build --workspaces --if-present",
    "start": "npm run watch",
    "watch:theme": "npm run watch -w=roundhouse-theme",
    "watch:plugin": "npm run watch -w=roundhouse-plugin",
    "watch": "run-p watch:theme watch:plugin",
    "test": "npm run test --workspaces --if-present",
    "clean-dist": "npm run clean-dist --if-present"
  },
  "author": {
    "name": "PVD Industrial",
    "email": "info@pvdindustrial.com",
    "url": "https://pvdindustrial.com",
    "role": "developer"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "npm-run-all": "^4.1.5"
  }
}
